@model BurgersListViewModel

    <h1>@Model.CurrentCategory</h1>   
    @foreach (var burger in Model.Burgers)
            {
                <div class="col-sm-4 col-lg-4 col-md-4">
                    <div class="thumbnail">
                        <img src="@burger.ImageThumbnailUrl" alt="">
                        <div class="caption">
                            <h3 class="pull-right">@burger.Price.ToString("c")</h3>
                            <h3> 
                                <a asp-controller="Burger" asp-action="Details" asp-route-id="@burger.BurgerId">@burger.Name</a>
                            </h3>
                            <p>@burger.Description</p>
                        </div>
                    </div>
                </div>
            }
